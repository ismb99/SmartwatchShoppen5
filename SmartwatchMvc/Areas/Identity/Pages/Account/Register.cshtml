@page
@using Services
@model RegisterModel
@{
    ViewData["Title"] = "Registrera";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Skapa nytt konto</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password">Lösenord</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword">Bekräfta lösenord</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
             <div class="form-floating">
                <input asp-for="Input.Name" class="form-control"  aria-required="true" />
                <label asp-for="Input.Name">Namn</label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
             <div class="form-floating">
                <input asp-for="Input.StreetAdress" class="form-control" aria-required="true" />
                <label asp-for="Input.StreetAdress">Adress</label>
                <span asp-validation-for="Input.StreetAdress" class="text-danger"></span>
            </div>
             <div class="form-floating">
                <input asp-for="Input.City" class="form-control"  aria-required="true" />
                <label asp-for="Input.City">Stad</label>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.PostTown" class="form-control"  aria-required="true" />
                <label asp-for="Input.PostTown">Postort</label>
                <span asp-validation-for="Input.PostTown" class="text-danger"></span>
            </div>
             <div class="form-floating">
                <input asp-for="Input.PhoneNumber" class="form-control"  aria-required="true" />
                <label asp-for="Input.PhoneNumber">Telefon</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            @if (User.IsInRole(SD.Admin))
            {
                
              <div class="form-floating">
                 <select asp-for="Input.Role" asp-items="@Model.Input.Roles" class="form-select">
                <option disabled selected>Välj Roll</option>
            </select>
                <label asp-for="Input.Roles"></label>
            </div>
            
            }
           
            
              
           
           
           
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registrera</button>
        </form>
    </div>
   
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
