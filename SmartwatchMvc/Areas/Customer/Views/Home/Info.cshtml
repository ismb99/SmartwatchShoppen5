@model ShoppingCart


<form method="post">
    <input hidden asp-for="ProductId" />
    <div class="card container border-primary pt-4 mt-2">
        <div class="card-body row container">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-8 col-lg-8">
                        <div class="col-12 col-md-6">
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>Modell:</label>
                                </div>
                                <div class="col-9">
                                    <p>@Model.Product.Name</p>
                                    <span asp-validation-for="Product.Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>Märke:</label>
                                </div>
                                <div class="col-9">
                                    <p>@Model.Product.Brand</p>
                                    <span asp-validation-for="Product.Brand" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>Pris:</label>
                                </div>
                                <div class="col-9">
                                    <p>@Model.Product.Price.ToString("c")</p>
                                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row ">
                                <div class="col-9">
                                    <p class="">@Model.Product.Description</p>
                                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row pl-2">
                            <div class="col-2"><p>Antal</p></div>
                            <div class="col-10"><input asp-for="Amount" min="1" class="" /></div>
                        </div>

                    </div>
                    <div class="col-12 col-lg-3 offset-lg-1 text-center">
                        <img src="@Model.Product.ImageUrl" width="100%" class="rounded" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                @if (User.IsInRole("Admin"))
                {
                    <div class="col-12 col-md-6 pb-1">
                        <a class="btn btn-success form-control " style="height:50px;" asp-action="Index">Hem</a>
                    </div>
                }

                @if (User.IsInRole("Customer"))
                {
                    <div class="col-12 col-md-6 pb-1">
                        <a class="btn btn-success form-control " style="height:50px;" asp-action="Index">Hem</a>
                    </div>

                    <div class="col-12 col-md-6 pb-1">
                        <button type="submit" value="Add to Cart" class="btn btn-primary form-control" style="height:50px;">Lägg i varukorgen</button>
                    </div>

                }
            </div>
        </div>
    </div>
</form>












